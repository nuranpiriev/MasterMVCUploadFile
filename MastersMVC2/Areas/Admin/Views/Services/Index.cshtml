@model IEnumerable<Service>;

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Services</h1>

    <a asp-action="Create" asp-controller="Services" asp-area="Admin">
        <button class="btn btn-success mb-3">
            Create
        </button>
    </a>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Info</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Service item in Model)
                        {
                            <tr>
                                <td><img width="50" src="~/@item.ImagePath"/></td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-controller="Services" asp-action="Info" asp-area="Admin" asp-route-id="@item.Id">
                                        <button class="btn btn-primary">
                                            Info
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->