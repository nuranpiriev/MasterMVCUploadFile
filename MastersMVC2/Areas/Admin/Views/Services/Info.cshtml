@model Service;

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>isActive</th>
                            <th>Created at</th>
                            <th>Updated at</th>
                            <th>Deleted at</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.isActive</td>
                            <td>@Model.CreatedAt</td>
                            <td>@Model.UpdatedAt</td>
                            <td>@Model.DeletedAt</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Services" asp-area="Admin" asp-route-id="@Model.Id">
                                    <button class="btn btn-warning text-white">
                                        Edit
                                    </button>
                                </a>
                            </td>
                            <td>
                                @{
                                    if (Model.isActive)
                                    {
                                        <a asp-action="SoftDelete" asp-controller="Services" asp-area="Admin" asp-route-id="@Model.Id">
                                            <button class="btn btn-danger text-white">
                                                Soft Delete
                                            </button>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-action="HardDelete" asp-controller="Services" asp-area="Admin" asp-route-id="@Model.Id">
                                            <button class="btn btn-danger text-white">
                                                Hard Delete
                                            </button>
                                        </a>
                                    }
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->